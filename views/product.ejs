<!DOCTYPE html>
<html lang="en">

    <!-- Basic -->
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">   
   
    <!-- Mobile Metas -->
    <meta name="viewport" content="width=device-width, initial-scale=1">
 
     <!-- Site Metas -->
    <title>Al-Kullan</title>  
    <meta name="keywords" content="">
    <meta name="description" content="">
    <meta name="author" content="">

    <!-- Site Icons -->
    <link rel="shortcut icon" href="images/favicon.ico" type="image/x-icon" />
    <link rel="apple-touch-icon" href="images/apple-touch-icon.png">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/css/bootstrap.min.css">
    <!-- Site CSS -->
    <link rel="stylesheet" href="/style.css">
    <!-- ALL VERSION CSS -->
    <link rel="stylesheet" href="/css/versions.css">
    <!-- Responsive CSS -->
    <link rel="stylesheet" href="css/responsive.css">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="css/custom.css">

    <!-- Modernizer for Portfolio -->
    <script src="/js/modernizer.js"></script>

    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.0/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body class="host_version"> 

    <!-- LOADER -->
	<div id="preloader">
		<div class="loader-container">
			<div class="progress-br float shadow">
				<div class="progress__item"></div>
			</div>
		</div>
	</div>
	<!-- END LOADER -->	

	<header class="top-navbar">
		<nav class="navbar navbar-expand-lg navbar-light bg-light">
			<div class="container-fluid">
				<a class="navbar-brand" href="/">
					<img src="images/Adsız.png" alt="" />
				</a>
				<button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbars-host" aria-controls="navbars-rs-food" aria-expanded="false" aria-label="Toggle navigation">
					<span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
				</button>
				<div class="collapse navbar-collapse" id="navbars-host">
					<ul class="navbar-nav ml-auto">
						<li class="nav-item <½= page_name === 'index' && 'active' %> "><a class="nav-link" href="/products">Ürünler</a></li>
                    
					

					 <% if(userROLE==="Customer") {  %>
							
						<li class="nav-item"><a class="nav-link" href="/myBasket">Sepetim</a></li>
						<% }%>


					<% if(userROLE==="Seller") {  %>
					
						<li class="nav-item"><a class="nav-link" href="/myProducts">Satıştaki Ürünlerim</a></li>
					
					<% }%>
					</ul>

                


					<% if(!userIN) {  %>

					<ul class="nav navbar-nav navbar-right">
                        <li><a class="hover-btn-new log orange mr-2" href="/login"><span><i class="fa fa-sign-in" aria-hidden="true"></i></span></a></li>
						<li><a class="hover-btn-new log orange" href="/register"><span><i class="fa fa-user-plus" aria-hidden="true"></i></span></a></li>
                    </ul> 
					<%  }  %>
                   

                
                      <% if(userIN) {  %>
                        <ul class="nav navbar-nav navbar-right">
                                <li><a class="hover-btn-new log mr-2" href="/users/logout"><span><i class="fa fa-sign-out" aria-hidden="true"></i></span></a></li>
                        </ul>
						<% } %>
                            
                     


				</div>
			</div>
		</nav>
	</header>
	
	
	
    <div id="overviews" class="section wb">
        <div class="container">
            <div class="row"> 
                <div class="col-lg-9 blog-post-single">
                    <div class="blog-item">
						<div class="image-blog">
							<img src="<%= product.image %>" alt="" class="img-fluid">
						</div>
						<div class="post-content">
							<div class="post-date">
								<form method="POST" action="/products/addToBasket">
									<input type="hidden" name="product_id" value="<%= product._id %>">
									<button class="btn btn-lg btn-warning text-white"><span>SEPETE EKLE</span></button>
								</form>
							
							</div>
						
							<div class="blog-title">
								<h2><a href="#" title=""><%= product.name %></a></h2>
							</div>
							<div class="blog-desc">
								
								<blockquote class="default">
								Ürün Özellikleri: <%= product.description %>
								</blockquote>
                                <blockquote class="default">
								Ürün Fiyatı:	<%= product.price %>
								</blockquote>
                                <blockquote class="default">
								Stok:	<%= product.stok %>
								</blockquote>
							</div>
                            
                          
						</div>
					</div>
					
					<div class="blog-author">
						<div class="author-bio">
			
							<h3 class="author_name"><a href="#">Satıcı:</a></h3>
							
							<p class="author_det">
								<%=product.user.name %>
							</p>
						</div>
					
					</div>
					
                </div><!-- end col -->
			
				
				</div>
            </div><!-- end row -->
        </div><!-- end container -->
    </div><!-- end section -->

   


    <a href="#" id="scroll-to-top" class="dmtop global-radius"><i class="fa fa-angle-up"></i></a>

    <!-- ALL JS FILES -->
    <script src="/js/all.js"></script>
    <!-- ALL PLUGINS -->
    <script src="/js/custom.js"></script>

</body>
</html>